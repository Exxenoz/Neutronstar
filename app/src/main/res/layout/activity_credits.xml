<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.autrage.projects.zeta.activity.CreditsActivity"
    android:background="@drawable/background_generic">

    <TextView
        android:text="@string/cv_credits1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:id="@+id/txtViewCredits1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="64px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mm_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:id="@+id/imgViewCreditsLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150px" />

    <TextView
        android:text="@string/cv_credits2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewCredits2"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_below="@+id/txtViewCredits1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:textSize="64px" />

</RelativeLayout>
